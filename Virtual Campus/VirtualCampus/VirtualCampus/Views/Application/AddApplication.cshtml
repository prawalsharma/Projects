@{
    ViewBag.Title = "Workspace - ABC";
}
@model VirtualCampus.Models.Application
<div id="content-header">
    @Html.Partial("~/Views/Shared/_UserName.cshtml");
</div>
<div class="block-container shadow style-3">
   <table>
   <tr>
   <td>
   <h5>Create New Application</h5>
    @using (Html.BeginForm())
    { 
        <div id="appname" style="display: block;">
            <p>
                Application Name</p>
            @Html.TextBoxFor(model => model.Application_Name, null, new { @class = "TextBox" })
        </div>
        <div id="tb-1" style="display: block;">
            <p>
                Textbox-1 Name</p>
            @Html.TextBoxFor(model => model.TextLabel_1, null, new { @class = "TextBox" })
        </div>
        <div id="tb-2" style="display: none;">
            <p>
                Textbox-2 Name</p>
            @Html.TextBoxFor(model => model.TextLabel_2, null, new { @class = "TextBox" })
        </div>
        <div id="tb-3" style="display: none;">
            <p>
                Textbox-3 Name</p>
            @Html.TextBoxFor(model => model.TextLabel_3, null, new { @class = "TextBox" })
        </div>
        <div id="tb-4" style="display: none;">
            <p>
                Textbox-4 Name</p>
            @Html.TextBoxFor(model => model.TextLabel_4, null, new { @class = "TextBox" })
        </div>
        <div id="tb-5" style="display: none;">
            <p>
                Textbox-5 Name</p>
            @Html.TextBoxFor(model => model.TextLabel_5, null, new { @class = "TextBox" })
        </div>
        <div id="ta-1" style="display: block;">
            <p>
                Textarea-1 Name</p>
            @Html.TextBoxFor(model => model.TextArea_1, null, new { @class = "TextBox" })
        </div>
        <div id="ta-2" style="display: none;">
            <p>
                Textarea-2 Name</p>
            @Html.TextBoxFor(model => model.TextArea_2, null, new { @class = "TextBox" })
        </div>
        <div id="ta-3" style="display: none;">
            <p>
                Textarea-3 Name</p>
            @Html.TextBoxFor(model => model.TextArea_3, null, new { @class = "TextBox" })
        </div>
            <div id = "date-1" style="display: block;">
        <p>Date Label Name</p>
        @Html.TextBoxFor(model => model.DateLabel_1, null, new { @class = "TextBox" })
        </div>
        <input type="submit" class="button" value="Save Application" style="float: right;" />
    }
    <br /><br /><br>
    <div id="add-tb" class="button" style="width: 100px; height: 25px; display: inline-block"><center>Add Textbox</center></div>
    <div id="add-ta" class="button" style="width: 100px; height: 25px; display: inline-block"><center>Add TextArea</center></div>
    <div id="add-date" class="button" style="width: 100px; height: 25px; display: inline-block"><center>Add Date</center></div>
    </td>
   </tr>
   </table>
    
</div>
<script>
    var tbcount = 2;
    $("#add-tb").click(function () {
        $("#tb-" + tbcount).show("slow", function () {
            tbcount++;
        });
    });
</script>
<script>
    var tacount = 2;
    $("#add-ta").click(function () {
        $("#ta-" + tacount).show("slow", function () {
            tacount++;
        });
    });
</script>
<script>
    var dc = 1;
    $("#add-date").click(function () {
        $("#date-" + dc).show("slow", function () {
            dc++;
        });
    });
</script>

@section sideSection {
    <div id="side-bar-one">
        <div class="header shadow">
            <h5>
                Applications
            </h5>
        </div>
        @{
            string[] appname = new string[(int)@ViewBag.noapp];
            Int32[] appid = new Int32[(int)@ViewBag.noapp];
            int i = 0, j = 0, p = 0, q = 0;
            foreach (string name in @ViewBag.appname as string[])
            {
                appname[i] = name;
                i++;
            }
            foreach (Int32 aid in @ViewBag.appid as Int32[])
            {
                appid[j] = aid;
                j++;
            }
            string[] workspaceusername = new string[(int)@ViewBag.usercount];
            Int32[] wusernameid = new Int32[(int)@ViewBag.usercount];
            foreach (string username in @ViewData["workspaceusername"] as string[])
            {
                workspaceusername[p] = username;
                p++;
            }
            foreach (Int32 uid in @ViewData["userid"] as Int32[])
            {
                wusernameid[q] = uid;
                q++;
            }
        }
        <div id="" class="shadow" style="width: 350px; max-height: 200px; margin: auto; padding: 5px 12px 5px 12px;
            background: #ffffff; overflow: auto;">
            <ul class="menu-ul">
                @for (int k = 0; k < (int)@ViewBag.noapp; k++)
                {
                    <li class="menu-li" style="display: inline;"><a href="/application/viewapplication?k=@ViewBag.workspacename&id=@appid[k]">@appname[k]</a></li>
                }
            </ul>
            <h6>
                <a href="/application/addapplication?k=@ViewBag.workspacename">Add New Application</a></h6>
        </div>
        <div class="header shadow">
            <h5>
                Workspace Members</h5>
        </div>
        <div class="shadow" style="width: 350px; max-height: 200px; margin: auto; padding: 5px 12px 5px 12px;
            background: #ffffff; overflow: auto;">
            <ul class="menu-ul">
                @for (int l = 0; l < (int)@ViewBag.usercount; l++)
                {
                    <li class="menu-li" style="display: block;"><a href="@wusernameid[l]">@workspaceusername[l]</a></li>
                }
            </ul>
            <h6>
                <a href="/workspace/adduser?workspace=@ViewBag.workspacename">Add New Members</a></h6>
        </div>
    </div>
}
