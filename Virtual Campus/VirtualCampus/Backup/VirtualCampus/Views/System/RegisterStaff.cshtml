@{
    Layout = null;
}
@model VirtualCampus.Models.StaffModel
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/index.css" rel="stylesheet" type="text/css" />
    <title>Staff Registration</title>
</head>
<body>
    <div id="main-header">
    </div>
    <div id="register-panel" class="shadow">
        <div id="register-head-panel">
            <p>Staff Registration</p>
        </div>
        <p>
            The username is unique for every user in the system.
        </p>
        @using (Html.BeginForm("SaveRegisterStaff","system"))
        {
        <table>
            <tr>
                <td>
                    <p> @{int id = ViewBag.userid;}
                    <input type = hidden name = "User_Id" value="@id" />
                        
                        Name:</p>
                </td>
                <td>@Html.TextBoxFor(model => model.Staff_Name, new { @class = "searchTextBox" })
                </td>
            </tr>
            <tr>
                <td>
                    <p>
                        Gender:</p>
                </td>
                <td>
                    <p>@Html.RadioButtonFor(model => model.Staff_Gender, "Male")Male
                        @Html.RadioButtonFor(model => model.Staff_Gender, "Female")Female</p>
                </td>
            </tr>
            <tr>
                <td>
                    <p>
                        College:</p>
                </td>
                <td>@Html.TextBoxFor(model => model.Staff_College, new { @class = "searchTextBox" })
                </td>
            </tr>
            <tr>
            <tr>
                <td>
                    <p>
                        Department:</p>
                </td>
                <td>@Html.TextBoxFor(model => model.Staff_Department, new { @class = "searchTextBox" })
                </td>
            </tr>
            <tr>
                <td>
                    <p>
                        Designation:</p>
                </td>
                <td>@Html.TextBoxFor(model => model.Staff_Designation, new { @class = "searchTextBox" })
                </td>
            </tr>
            <tr>
                <td>
                    <p>
                        Library ID:</p>
                </td>
                <td>@Html.TextBoxFor(model => model.Staff_LibraryId, new { @class = "searchTextBox" })
                </td>
            </tr>
            <tr>
            <tr>
                <td>
                    <p>
                        Contact No:</p>
                </td>
                <td>@Html.TextBoxFor(model => model.Staff_ContactNo, new { @class = "searchTextBox" })
                </td>
            </tr>
            <tr>
                <td>
                    <p>
                        Email Id:</p>
                </td>
                <td>@Html.TextBoxFor(model => model.Staff_EmailId, new { @class = "searchTextBox" })
                </td>
            </tr>
            <tr>
                <td>
                    <p>
                        Birthday:
                    </p>
                </td>
                <td>@Html.TextBoxFor(model => model.Staff_BirthDate, new { @class = "searchTextBox" })
                </td>
            </tr>
            <tr>
                <td>
                    <p>
                        Security Question:</p>
                </td>
                <td>@Html.TextBoxFor(model => model.Staff_Security_Ques, new { @class = "searchTextBox" })
                </td>
            </tr>
            <tr>
                <td>
                    <p>
                        Security Answer:</p>
                </td>
                <td>@Html.TextBoxFor(model => model.Staff_Security_Ans, new { @class = "searchTextBox" })
                </td>
            </tr>
            <tr>
            <tr>
                <td>
                </td>
                <td>
                     <input id="signup" class="button" type="submit" value="Sign Up" />
                </td>
            </tr>
        </table>
        }
    </div>
</body>
</html>
